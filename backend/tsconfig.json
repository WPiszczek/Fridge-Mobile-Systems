{
  "compilerOptions": {
    "incremental": true,
    "tsBuildInfoFile": "dist/.tsbuildinfo",
    "target": "ESNext",
    "module": "CommonJS",
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ],  "outDir": "./dist" ,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
  },
  "include": ["src/**/*"]
}
